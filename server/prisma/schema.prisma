generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../../db/poll.sqlite"
}

model PollSettings {
  roomId          String   @id
  numberOfOptions Int
  numbering       String
  openVote        Boolean
  showResults     Boolean
  moderationKey   String
  expiry          DateTime
  expiryDelay     String
}
